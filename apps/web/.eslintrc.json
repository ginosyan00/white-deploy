{
  "extends": "next/core-web-vitals",
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "react/react-in-jsx-scope": "off",
    "no-undef": "error",
    "react/no-unescaped-entities": "warn"
  }
}

