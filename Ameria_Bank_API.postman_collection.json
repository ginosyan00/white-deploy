					"raw": "{\n  \"Username\": \"{{username}}\",\n  \"Password\": \"{{password}}\",\n  \"PaymentID\": \"{{payment_id}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/VPOS/GetPaymentDetails",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"VPOS",
						"GetPaymentDetails"
					]
				},
				"description": "Get payment details by PaymentID. Used to verify payment status after callback.\n\n**Important:**\n- ClientID is NOT required in this request\n- PaymentID should be from InitPayment response\n- Success: ResponseCode = \"00\""
			},
			"response": []
